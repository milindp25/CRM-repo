# =============================================================================
# Admin API (NestJS) - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: This API validates JWTs issued by the Tenant API.
# JWT_SECRET MUST match the Tenant API's JWT_SECRET.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
API_PORT=4001
API_VERSION=1

# -----------------------------------------------------------------------------
# Database (same instance as Tenant API)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:5432/[DATABASE]"
DIRECT_URL="postgresql://postgres:[PASSWORD]@[HOST]:5432/[DATABASE]"

# -----------------------------------------------------------------------------
# Authentication (must match Tenant API)
# -----------------------------------------------------------------------------
JWT_SECRET="<same-as-tenant-api-jwt-secret>"
JWT_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# CORS â€” Admin frontend only
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS="http://localhost:3001"

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="info"
